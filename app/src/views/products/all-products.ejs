        <div class="container_subtitle">
          <h4 class="subtitle">Nuestra colecci√≥n completa</h4>
        </div>
        <section class="group">
          <% books.forEach(book => { %>
            <article class="container_book" id="tarjeta">
              <a href="/store/details/<%- book.id %>"
                ><img
                  class="image_book"
                  src="./images/books/<%- book.image %>"
