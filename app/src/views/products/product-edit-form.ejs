<!DOCTYPE html>
<html lang="en">
<!-- Includes head -->
<%- include("../partials/head", {title: "Editando: " + bookToEdit.title}) %>
<body>
<!-- header -->
<%- include("../partials/header") %>    
<!-- header -->

<div class="container-title">
    <div class="row">
        <div class="title-form">
        <h2 class="title">Estas editando: <%= bookToEdit.title %></h2>
        </div>    
    </div>
</div>
<div class="container-form">
    <form action="/" method="PUT">
    <div class="container-product">
        <div class="form">
        <label for="name" class="form-label">Nombre del producto</label>
        <input type="text" id="name" name="title" placeholder="EJ: El numero cuatro" value="<%= bookToEdit.title %> " class="form-input">
        </div> 
        <div class="form">
            <label for="text" class="form-label">Autor</label>
            <input type="text" id="author" name="author" placeholder="EJ: J.K. Rowling" value="<%= bookToEdit.author %>" class="form-input">
        </div>  
        <div class="form">
            <label for="price" class="form-label">Precio</label>
            <input type="text" id="price" name="price" placeholder="EJ: 12345" value="<%= bookToEdit.price %>" class="form-input">
        </div>  
        <div class="form">
            <label for="editorial" class="form-label">Editorial</label>
            <input type="text" id="editorial" name="editorial" placeholder="EJ: IVREA" value="<%= bookToEdit.editorial %>" class="form-input">
        </div>  
        <div class="form-idioma">
            <label for="lenguaje" class="form-label">Idioma</label>
            <select name="lenguajes" id="lenguaje" class="form-input">
                <% languages.forEach(language => { %>
                    <option value="<%- language.id %> selected="<%- bookToEdit.language %>"><%- language.language %></option>
                <% }) %>
            </select>
        </div>  
        <div class="form">
            <label for="formato" class="form-label">Formato</label>
            <input type="text" id="formato" name="format" placeholder="EJ: Digital" value="<%= bookToEdit.format %>" class="form-input">
        </div>
        <div class="form-genero">
        <label for="genero" class="form-label">Genero</label>
        <select name="genre" id="genero" value="<%= bookToEdit.genre %>" class="form-input">
            <% genres.forEach(genre => { %>
                <option value="<%- genre.id %>" selected="<%- bookToEdit.genre %>"><%- genre.genre %></option>
                <% }) %>
        </select>
        </div>
        <div class="form-portada">
            <label>Elegir imagen del libro</label>
            <input type="file" name="image" value="<%= bookToEdit.image %>" accept=".jpg" multiple>
        </div>
        <div class="form-descripcion">
            <label for="descripcion" class="form-label">Descripcion</label>
            <textarea id="descripcion" name="description" placeholder="Maximo 200 caracteres" class="form-input"><%= bookToEdit.description %></textarea>
        </div>
        <div class="btn-save">
            <button type="submit" class="save-product">Guardar Producto</button>
        </div>
    </div>
    </form>
</div>
<!-- Includes footer -->
<%- include("../partials/footer") %> 
<!-- Includes footer -->

</body>
</html>