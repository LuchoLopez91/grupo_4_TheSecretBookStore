<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head", {doctitle: book.title}) %>
  </head>

  <body>
    <%- include("../partials/header") %>

    <main class="product">
      <!-- Barra navegación -->
      <section class="dir-bar">
        <div>
          <a href="/">Inicio</a> / <a href="">Categorías</a> /
          <a href=""><%= book.title %> </a>
        </div>
      </section>
      <div class="product">
        <!-- Título -->
        <section class="title-box">
          <!-- Foto -->
          <div class="photo-container">
            <img
              src="/images/books/<%- book.image %>"
              alt="<%- book.title %>"
            />
          </div>
          <!-- Información -->
        </section>
        <!-- Descripción -->
        <section class="description">
          <div class="info">
            <h2><%= book.title %></h2>
            <h3><%= book.author %></h3>
          </div>
          <div class="price">Precio: $<%= book.price %></div>
          <div class="btn-container">
            <div class="product-btn">Favorito</div>
            <div class="product-btn"><a href="/cart">Comprar</a></div>
            <div class="product-btn">
              <form
                action="/store/delete/<%- book.id %>?_method=DELETE"
                method="POST"
              >
                <button type="submit" class="action-button delete">
                  ELIMINAR
                </button>
              </form>
            </div>
          </div>
          <p>Calificación: <%= book.calification %></p>
          <p>Editorial: <%= book.editorial %></p>
          <p>I.S.B.N.: <%= book.ISBN %></p>
          <p>Nro. de páginas: <%= book.pages %></p>
          <p>Idiomas: <%= book.languages %></p>
          <p>Formato: <%= book.format %></p>
          <p>Género: <a href=""><%= book.genre %></a></p>
          <p>Fecha de publicación: <%= book.publication %></p>
        </section>
      </div>
      <section class="about">
        <div id="description">
          <h3>Descripción</h3>
          <p><%= book.description %></p>
        </div>
      </section>
      <!-- Relacionados -->
      <section class="related">
        <h3>También te puede interesar</h3>
        <div class="product--container">
          <article>
            <div class="photo-container">
              <img
                src="/images/books/<%= book.image %>"
                alt="<%= book.title %>"
              />
            </div>
            <div>
              <h4><%= book.title %></h4>
              <h4><%= book.author %></h4>
              <p>$<%= book.price %></p>
            </div>
          </article>
        </div>
      </section>
