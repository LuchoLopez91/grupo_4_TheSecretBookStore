    <main class="product">
      <!-- Barra navegación -->
      <div class="dir-bar">
        <a href="/">Inicio</a> / <a href="">Categorías</a> /
        <a href="">Spy X Family</a>
      </div>
      <!-- Libro -->
    <article class="product"> 
        <!-- Foto -->
        <div class="photo-container">
          <img
            src="/images/books/<%- book.covers.route %>"
            alt="<%- book.title %>"
          />
        </div>
      <!-- Descripción -->
      <section class="description">
          <div class="info-container">
              <div class="info">
                <h2><%= book.title %></h2>
                <h3><%= book.author %></h3>
              </div>
              <div class="price">Precio: $<%= book.price %></div>
              <div class="btn-container">
                <div class="product-btn">Favorito</div>
                <div class="product-btn"><a href="/cart">Comprar</a></div>
                <div class="product-btna">
                  <form action="/store/delete/<%- book.id %>?_method=DELETE" method="POST">
                    <button type="submit">
                      ELIMINAR
                    </button>
                  </form>
                </div>
                <div class="product-btna">
                  <form action="/store/edit/<%- book.id %>" method="GET">
                    <button type="submit">
                      Editar
                    </button>
                  </form>
                </div>
              </div>
              <p>Calificación: <%= book.calification %>/10</p>
              <p>Editorial: <%= book.editorials.editorial %></p>
              <p>I.S.B.N.: <%= book.isbn13 %></p>
              <p>Nro. de páginas: <%= book.pageCount %></p>
              <p>Idiomas: <%= book.languages.language %></p>
              <p>Formato: <%= book.formats.format %></p>
              <p>Género: <a href="/store/category/<%= book.genre %>"><%= book.genre %></a></p>
              <p>Fecha de publicación: <%= book.publication_date %></p>
          </div>
          
      </section>
  </article>
