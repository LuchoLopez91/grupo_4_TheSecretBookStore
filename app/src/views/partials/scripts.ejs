<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
<script>
  /* variables */
  let burgerMenu = document.querySelector(".burger-menu");
  let btnClose = document.querySelector(".btn-close-container");
  let menuContainer = document.querySelector(".menu-container");
  
  let footerLista1 = document.querySelector(".paraclickear");
  let listado1 = document.querySelector(".listado1");
  
  let footerLista2 = document.querySelector(".paraclickear2");
  let listado2 = document.querySelector(".listado2");
  const QueryS = element => document.querySelector(element);
  const QuerySA = element => document.querySelectorAll(element);
  
  let $signUp = QueryS(".fa-user"),
    $userMenu = QueryS(".menu-user"),
    $categoria = QueryS(".generos"),
    $listadoCategorias = QueryS(".categories")
  
  /* eventos */

  /*footer*/
  footerLista1.addEventListener("click", ()=>{
    listado1.classList.toggle("active");
  });
  footerLista2.addEventListener("click", ()=>{
    listado2.classList.toggle("active");
  });
 
  /* header */
  burgerMenu.addEventListener("click", () => {
    menuContainer.classList.toggle("active");
  });
  btnClose.addEventListener("click", () => {
    menuContainer.classList.remove("active");
  });
  $signUp.addEventListener("click", function (e) {
        $userMenu.classList.toggle("show");
    });
    $categoria.addEventListener("click", function (e) {
       e.preventDefault();
        $listadoCategorias.classList.toggle("mostrar");
    })
</script>