<!DOCTYPE html>
<html lang="es">
  <%- include("./partials/head") %>  

  <body>

    <%- include("./partials/header") %> 
    
    <!-- MAIN -->
    <main class="home">
      <div>
        <img class="banner" src="/images/main/bannerIvrea.jpg" alt="Banner Ivrea" />
      </div>
      <div class="container_subtitle">
        <h4 class="subtitle">Añadidos recientemente</h4>
      </div>
      <section class="group">
        <% books.forEach(book => { %>
          <article class="container_book">
            <a href="/product/<%- book.id %>"
              ><img
                class="image_book"
                src="./images/books/<%- book.image %>"
                alt="<%- book.title %>"
              />
              <p><%- book.title %></p>
              </a>
          </article>
        <% }) %>
      </section>

      <div class="container_subtitle">
        <h4 class="subtitle">Nuestros libros digitales</h4>
      </div>
      <section class="group">
        <% digital.forEach(book => { %>
          <article class="container_book">
            <a href="/product/<%- book.id %>"
              ><img
                class="image_book"
                src="./images/books/<%- book.image %>"
                alt="<%- book.title %>"
              />
              <p><%- book.title %></p>
              </a>
          </article>
        <% }) %>
      </section>

      <div class="container_subtitle">
        <h4 class="subtitle">En formato físico</h4>
      </div>
      <section class="group">
        <% paperback.forEach(book => { %>
          <article class="container_book">
            <a href="/product/<%- book.id %>"
              ><img
                class="image_book"
                src="./images/books/<%- book.image %>"
                alt="<%- book.title %>"
              />
              <p><%- book.title %></p>
              </a>
          </article>
        <% }) %>
      </section>

      <section class="group2">
        <article class="container">
          <span>Todos los medios de pago</span>
          <img src="./images/main/creditCard2.png" alt="Credit Card Logo " />
        </article>
        <article class="container">
          <span>Envíos gratis</span>
          <img src="./images/main/truck.png" alt="Truck Logo" />
        </article>
        <article class="container">
          <span>Cuotas Sin Interés</span>
          <img src="./images/main/mercadoPago_logo.png" alt="Mercado Pago Logo" />
        </article>
        <article class="container">
          <span>Compra Protegida</span>
          <img src="./images/main/shield.png" alt="Shield Logo" />
        </article>
      </section>

      <section class="group3">
        <div class="subscribe">
          <p>
            Suscribete a nuestro newsletter y recibe las novedades de The
            BookStore Secret antes que nadie!
          </p>
          <input
            class="input-container"
            type="text"
            placeholder="Ingresa tu Email..."
          />
          <button class="btn">Suscribirme</button>
        </div>
      </section>
    </main>

    <%- include("./partials/footer") %> 
    
    <script>
      /* variables */
      let burgerMenu = document.querySelector(".burger-menu");
      let btnClose = document.querySelector(".btn-close-container");
      let menuContainer = document.querySelector(".menu-container");
      let abrir1 = document.querySelector(".abrir1");
      let abrir2 = document.querySelector(".abrir2");
      let abrir3 = document.querySelector(".abrir3");
      let more1 = document.querySelector(".more1");
      let less1 = document.querySelector(".less1");
      let more2 = document.querySelector(".more2");
      let less2 = document.querySelector(".less2");
      let more3 = document.querySelector(".more3");
      let less3 = document.querySelector(".less4");
      let lista1 = document.querySelector(".lista1");
      let lista2 = document.querySelector(".lista2");
      let lista3 = document.querySelector(".lista3");

      /* eventos */
      /* header */
      burgerMenu.addEventListener("click", () => {
        menuContainer.classList.add("active");
      });
      btnClose.addEventListener("click", () => {
        menuContainer.classList.remove("active");
      });
      /* footer */
      abrir1.addEventListener("click", () => {
        lista1.classList.add("active");
        more1.classList.remove("active");
        more1.classList.add("inactive");
        less1.classList.add("active");
        less1.classList.remove("inactive");
      });
      abrir2.addEventListener("click", () => {
        lista2.classList.add("active");
        more2.classList.remove("active");
        more2.classList.add("inactive");
        less2.classList.add("active");
        less2.classList.remove("inactive");
      });
      abrir3.addEventListener("click", () => {
        lista3.classList.add("active");
        more3.classList.remove("active");
        more3.classList.add("inactive");
        less3.classList.add("active");
        less3.classList.remove("inactive");
      });
    </script>
  </body>
</html>
